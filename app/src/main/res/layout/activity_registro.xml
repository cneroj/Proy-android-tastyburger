<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alumno.proytastyburger.RegistroActivity"
    android:orientation="vertical"

    android:background="@drawable/fondoregistro">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </ScrollView>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:fontFamily="@font/nabila"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhite"
            android:textSize="40dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="DNI"
            android:layout_marginBottom="12dp"
            android:id="@+id/txtDNI"
            android:maxLength="8"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Usuario"
            android:layout_marginBottom="12dp"
            android:maxLength="25"
            android:id="@+id/txtUsuario"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Contrase単a"
            android:layout_marginBottom="12dp"
            android:id="@+id/txtContrase単a"
            android:maxLength="30"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Confirmar Contrase単a"
            android:layout_marginBottom="12dp"
            android:id="@+id/txtConfirmarContrase単a"
            android:maxLength="30"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"

            android:hint="Direccion"
            android:layout_marginBottom="12dp"
            android:id="@+id/txtDireccion"
            android:maxLength="150"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/phonewhite" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/imageView"
                android:hint="Telefono"
                android:inputType="phone"
                android:layout_marginBottom="12dp"

                android:id="@+id/txtTelefono"
                android:maxLength="9"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/emailwhite" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/imageView2"
                android:hint="Correo Electronico"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="12dp"
                android:id="@+id/txtCorreoElectronico"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Registrarse"
                android:id="@+id/btnRegistrar"
                android:onClick="onClickRegistrar"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>

